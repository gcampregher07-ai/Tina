rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access for products and categories
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null; // Only admins can write
    }
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null; // Only admins can write
    }

    // Allow public read for individual orders, but restrict list/write to admins
    match /orders/{orderId} {
      allow get: if true; // Anyone can get a single order (for summary page)
      allow list, create, update, delete: if request.auth != null; // Only admins can manage orders
    }
    
    // Allow admin read/write to site settings
    match /site_settings/{settingId} {
        allow read, write: if request.auth != null;
    }

    // Default deny for any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
