
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read for products and categories
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null; // Only admins (logged in)
    }
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null; // Only admins
    }
    
    // Allow public read for hero settings
    match /site_settings/hero {
        allow read: if true;
        allow write: if request.auth != null; // Only admins
    }

    // Orders can be created by anyone, but only read/updated/deleted by admins.
    // A specific order can be read by anyone who has the link (for order summary page).
    match /orders/{orderId} {
      allow read: if true; // Allows order summary page to work
      allow create: if true; // Allow anyone to create an order
      allow update, delete: if request.auth != null; // Only admins can modify
    }
  }
}
