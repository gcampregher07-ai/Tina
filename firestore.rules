rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Products can be read by anyone, but only written by authenticated admins.
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Categories can be read by anyone, but only written by authenticated admins.
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Site settings (like the hero banner) can be read by anyone,
    // but only written by authenticated admins.
    match /site_settings/{docId} {
        allow read: if true;
        allow write: if request.auth != null;
    }

    // Orders can be created by anyone.
    // A specific order can be read by anyone (for the order summary page).
    // Listing all orders is restricted to authenticated admins (for the dashboard).
    // Writing/deleting orders is restricted to authenticated admins.
    match /orders/{orderId} {
      allow create: if true;
      allow get: if true; // Allows reading a single document
      allow list: if request.auth != null; // Allows querying/listing the collection
      allow update, delete: if request.auth != null;
    }
  }
}
